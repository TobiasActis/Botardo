# Binance Futures API Configuration
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# Environment (true for testnet, false for mainnet)
BINANCE_TESTNET=true

# Trading Configuration
TRADING_SYMBOL=BTCUSDT
TIMEFRAMES=1h,4h,1d
BASE_TIMEFRAME=1h

# Risk Management
RISK_PER_TRADE=0.02
MAX_LEVERAGE=5
STOP_LOSS_MULTIPLIER=1.5
TAKE_PROFIT_RATIO=2.0

# Position Sizing
ACCOUNT_BALANCE_USDT=1000
MAX_POSITION_SIZE_PERCENT=0.1

# Wyckoff Parameters
MIN_ACCUMULATION_BARS=20
MIN_DISTRIBUTION_BARS=20
VOLUME_THRESHOLD_MULTIPLIER=1.5
SPRING_DETECTION_ENABLED=true

# Liquidation Protection
LIQUIDATION_BUFFER_PERCENT=0.15
MAX_MARGIN_USAGE=0.7

# Backtest Configuration
BACKTEST_START_DATE=2024-01-01
BACKTEST_END_DATE=2024-12-01
BACKTEST_INITIAL_BALANCE=10000

# Logging
LOG_LEVEL=INFO
LOG_FILE=botardo.log

# Notifications (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
ENABLE_NOTIFICATIONS=false

# Database (optional)
DATABASE_URL=sqlite:///botardo.db
